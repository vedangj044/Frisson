<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Frisson" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ef9a9a</item>
        <item name="colorPrimaryVariant">#ba6b6c</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!--Splash Screen Theme-->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
        
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/splashImageBackground</item>
    </style>

    <style name="Widget.Frisson.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <!--    Animation for theme change-->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/slide_out_right</item>
    </style>

    <!--    Text style with lato font-->
    <style name="TextAppearance.MdcTypographyStyles.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/lato</item>
